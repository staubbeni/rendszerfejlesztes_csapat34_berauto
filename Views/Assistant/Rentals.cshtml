@model IEnumerable<BerAuto.Models.Rental>

@{
    ViewData["Title"] = "Foglalások kezelése";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Felhasználó</th>
                <th>Autó</th>
                <th>Kezdő dátum</th>
                <th>Záró dátum</th>
                <th>Állapot</th>
                <th>Műveletek</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.User.FullName</td>
                    <td>@rental.Car.Brand @rental.Car.Model (@rental.Car.LicensePlate)</td>
                    <td>@rental.StartDate.ToShortDateString()</td>
                    <td>@rental.EndDate.ToShortDateString()</td>
                    <td>@rental.Status</td>
                    <td>
                        <a asp-action="RentalDetails" asp-route-id="@rental.Id" class="btn btn-sm btn-primary">Részletek</a>
                        @if (rental.Status == "Active" && !rental.IsReturned)
                        {
                            <a asp-action="ReturnCar" asp-route-id="@rental.Id" class="btn btn-sm btn-success">Visszavétel</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Nincs aktív foglalás.
    </div>
} 