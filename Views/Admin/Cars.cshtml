@model IEnumerable<BerAuto.Models.Car>

@{
    ViewData["Title"] = "Autók kezelése";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddCar" class="btn btn-primary">Új autó hozzáadása</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Rendszám</th>
                <th>Márka</th>
                <th>Modell</th>
                <th>Évjárat</th>
                <th>Kilométeróra</th>
                <th>Elérhető</th>
                <th>Napi díj</th>
                <th>Műveletek</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.LicensePlate</td>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Mileage km</td>
                    <td>@(car.IsAvailable ? "Igen" : "Nem")</td>
                    <td>@car.DailyRate Ft</td>
                    <td>
                        <a asp-action="EditCar" asp-route-id="@car.Id" class="btn btn-sm btn-primary">Szerkesztés</a>
                        <a asp-action="DeleteCar" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Törlés</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Nincs autó az adatbázisban.
    </div>
} 