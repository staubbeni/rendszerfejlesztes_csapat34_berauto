@model IEnumerable<BerAuto.Models.Car>

@{
    ViewData["Title"] = "Főoldal";
}

<div class="text-center">
    <h1 class="display-4">Üdvözöljük a BérAutó rendszerben!</h1>
    <p>Válasszon az elérhető autóink közül.</p>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@car.Brand @car.Model</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@car.Year, @car.Color</h6>
                        <p class="card-text">
                            <strong>Rendszám:</strong> @car.LicensePlate<br />
                            <strong>Kategória:</strong> @car.Category<br />
                            <strong>Üzemanyag:</strong> @car.FuelType<br />
                            <strong>Váltó:</strong> @car.Transmission<br />
                            <strong>Ülések száma:</strong> @car.Seats<br />
                            <strong>Napi díj:</strong> @car.DailyRate Ft
                        </p>
                        <a asp-controller="User" asp-action="RentCar" asp-route-id="@car.Id" class="btn btn-success">Kölcsönzés</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                Jelenleg nincs elérhető autó.
            </div>
        </div>
    }
</div> 