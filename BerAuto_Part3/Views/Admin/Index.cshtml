@{
    ViewData["Title"] = "Admin irányítópult";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                Felhasználók kezelése
            </div>
            <div class="card-body">
                <p>Itt kezelheti a rendszer felhasználóit.</p>
                <a asp-action="Users" class="btn btn-primary">Felhasználók</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                Autók kezelése
            </div>
            <div class="card-body">
                <p>Itt kezelheti a rendszerben lévő autókat.</p>
                <a asp-action="Cars" class="btn btn-primary">Autók</a>
            </div>
        </div>
    </div>
</div> 