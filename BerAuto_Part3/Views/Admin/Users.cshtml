@model IEnumerable<BerAuto.Models.User>

@{
    ViewData["Title"] = "Felhasználók kezelése";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Felhasználónév</th>
                <th>Teljes név</th>
                <th>E-mail</th>
                <th>Típus</th>
                <th>Regisztráció dátuma</th>
                <th>Műveletek</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.UserType</td>
                    <td>@user.RegistrationDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Szerkesztés</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Törlés</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Nincs felhasználó az adatbázisban.
    </div>
} 